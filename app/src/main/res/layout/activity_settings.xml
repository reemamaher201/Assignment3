<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <include
        android:id="@+id/settings_toolbar"
        layout="@layout/app_bar_layout"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/set_profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/profile"
        android:scaleType="centerCrop"
        app:riv_oval="true"/>

    <EditText
        android:id="@+id/set_user_name"
        android:layout_below="@id/set_profile_image"
        android:inputType="textMultiLine"
        android:hint="Username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/edite_user"
        android:textColor="#000000"
        android:textStyle="bold"
        android:background="@drawable/inputs"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="6dp">

    </EditText>

    <EditText
        android:id="@+id/set_user_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/set_profile_image"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="57dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/inputs"
        android:drawableLeft="@drawable/baseline_date_range_24"
        android:hint="BirthDate"
        android:inputType="textMultiLine"
        android:padding="6dp"
        android:textColor="#000000"
        android:textStyle="bold">

    </EditText>

    <EditText
        android:id="@+id/set_user_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/set_profile_image"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="103dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/inputs"
        android:drawableLeft="@drawable/baseline_add_location_24"
        android:hint="Address"
        android:inputType="textMultiLine"
        android:padding="6dp"
        android:textColor="#000000"
        android:textStyle="bold">

    </EditText>

    <EditText
        android:id="@+id/set_user_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/set_profile_image"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/inputs"
        android:drawableLeft="@drawable/baseline_local_phone_24"
        android:hint="Phone"
        android:inputType="textMultiLine"
        android:padding="6dp"
        android:textColor="#000000"
        android:textStyle="bold">

    </EditText>

    <Button
        android:id="@+id/update_settings_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/set_user_name"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="209dp"
        android:layout_marginRight="15dp"
        android:backgroundTint="#9ECBF7"
        android:inputType="textMultiLine"
        android:padding="6dp"
        android:text="Update"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:ignore="TextViewEdits">

    </Button>
</RelativeLayout>