<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ProfileActivity">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/visit_profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile"
        app:riv_border_color="#9ECBF7"
        app:riv_border_width="2dp"
        app:riv_oval="true" />

    <TextView
        android:id="@+id/visit_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"

        android:layout_marginRight="15dp"
        android:layout_marginBottom="455dp"
        android:text="User Name:"
        android:textAllCaps="false"
        android:textColor="#9ECBF7"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/visit_user_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"

        android:layout_marginRight="15dp"
        android:layout_marginBottom="362dp"
        android:text="Address:"
        android:textAllCaps="false"
        android:textColor="#9ECBF7"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/visit_user_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"

        android:layout_marginRight="15dp"
        android:layout_marginBottom="409dp"
        android:text="BirthDate:"
        android:textAllCaps="false"
        android:textColor="#9ECBF7"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/visit_user_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"

        android:layout_marginRight="15dp"
        android:layout_marginBottom="316dp"
        android:text="Phone:"
        android:textAllCaps="false"
        android:textColor="#9ECBF7"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/et_token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="10"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="176dp"
        android:layout_marginEnd="177dp"
        android:layout_marginBottom="319dp"
        android:text="TextView"
        android:visibility="gone"/>


</RelativeLayout>